<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edittext">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/duty_name_textView_duty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="Name"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                />

            <TextView
                android:id="@+id/duty_desc_textView_duty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:text="Description"
                android:maxEms="10"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:layout_below="@+id/duty_name_textView_duty_item"
                />

            <TextView
                android:id="@+id/day_textView_duty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:text="Day"
                android:maxEms="10"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:layout_below="@+id/duty_desc_textView_duty_item"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:text="ok"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>