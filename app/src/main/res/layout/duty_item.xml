<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="5dp"
    >




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/duty_name_textView_duty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:text="Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/duty_desc_textView_duty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/duty_name_textView_duty_item"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"
                android:maxEms="10"
                android:text="Description"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/day_textView_duty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/duty_desc_textView_duty_item"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"
                android:maxEms="10"
                android:text="Day"
                android:textSize="17sp" />


            <ImageButton
                android:id="@+id/ok_button_duty_item"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/green"
                android:src="@drawable/ic_check"
                android:background="@drawable/rounded_edittext"
                android:elevation="5dp"
                />


        </RelativeLayout>




</android.support.v7.widget.CardView>