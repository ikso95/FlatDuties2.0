<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_or_join_group.First_use_add_or_join_group"
    android:orientation="vertical"
    android:padding="10dp">


        <Button
            android:id="@+id/join_group_button_first"
            android:text="@string/Join_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_above="@+id/create_group_button_first"
            />

        <Button
            android:id="@+id/create_group_button_first"
            android:text="@string/Create_and_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            />




</RelativeLayout>