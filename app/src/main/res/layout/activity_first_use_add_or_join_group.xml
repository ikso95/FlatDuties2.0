<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_or_join_group.First_use_add_or_join_group"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/header_first_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/header_first_group"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:paddingHorizontal="40dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/textViewSlider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/Description_first_group"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_below="@+id/header_first_group"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"/>


    <Button
        android:id="@+id/join_group_button_first"
        android:text="@string/Join_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_above="@+id/create_group_button_first"
        />

    <Button
        android:id="@+id/create_group_button_first"
        android:text="@string/Create_and_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        />




</RelativeLayout>