<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:orientation="vertical"
    tools:context=".Start.StartActivity"
    >


    <android.support.v4.view.ViewPager
        android:id="@+id/slideViewPager_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/dots_layout_start"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

    </LinearLayout>

    <Button
        android:id="@+id/next_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/slideViewPager_start"
        android:layout_alignBottom="@+id/slideViewPager_start"
        android:background="@android:color/transparent"
        android:text="@string/Next"
        android:textSize="15sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/back_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/slideViewPager_start"
        android:layout_alignBottom="@+id/slideViewPager_start"
        android:background="@android:color/transparent"
        android:text="Back"
        android:textSize="15sp"
        android:visibility="invisible" />


</RelativeLayout>